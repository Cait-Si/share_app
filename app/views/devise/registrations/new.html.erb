<div class="form_field">
<h4>新しいアカウトを作成</h4>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <ul class="form_list">
    <li><span class="red_mark"></span><%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "ユーザー名" %></li>
    <li><span class="red_mark"></span><%= f.email_field :email, autocomplete: "email", placeholder: "メールアドレス" %></li>
    <li><span class="red_mark"></span><%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード" %></li>
    <li><span class="red_mark"></span><%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード確認" %></li>
    <li><%= f.submit "新しいアカウトを作成", class: "btn_login" %></li>
  </ul>
<% end %>

<%= link_to "すでにアカウントをお持ちの方はログイン", new_session_path(resource_name) %>
</div>
