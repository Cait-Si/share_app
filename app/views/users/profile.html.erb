<div class="content_line">
  <div class="content_side">
    <h4><%= link_to "アカウント", users_account_path, class: "link_deco_none" %></h4>
    <h3>プロフィール</h3>
  </div>
  <div class="content_main">
  <%= form_with model:@user, url: users_profile_path do |f| %>
  <table class="account_table">
    <tr>
      <th><h2>プロフィール</h2></th>
    </tr>
    <tr>
      <td colspan="2", class="icon_center" ><%= image_tag current_user.icon, class: "icon_img" %></td>
    </tr>
    <tr>
      <th><%= f.label :icon , "アイコン画像" %></th>
      <td><%= f.file_field :icon %></td>
    </tr>
    <tr>
      <th><%= f.label :name, "名前" %></th>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <th><%= f.label :introduction, "自己紹介" %></th>
      <td><%= f.text_area :introduction %></td>
    </tr>
    <tr>
      <td colspan="2"><%= f.submit "更新", class: "btn_submit" %></td>
    </tr>
  </table>
  <% end %>
  </div>
</div>
